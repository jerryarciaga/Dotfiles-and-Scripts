auto-reload yes
reload-threads 20
max-items 200


# unbind keys
unbind-key q
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

browser "w3m -s -no-cookie"

download-full-page yes
download-path "~/Documents/Podcasts/%n"
download-filename-format "%t.mp3"
max-downloads 20
player "cmus"
