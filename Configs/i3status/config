# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

# Installed additional packages (Arch): ttf-font-awesome

general {
    colors = true
	color_good = "#a3be8c"
	color_degraded = "#ebcb8b"
	color_bad = "#bf616a"
    interval = 1
	separator = " | "
}

order += "wireless _first_"
#order += "ethernet _first_"
order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "  %essid %ip"
        format_down = "  down"
}

# ethernet _first_ {
#         format_up = "  %ip"
#         format_down = "  down"
# }

battery all {
        last_full_capacity = true
        format = "%status  %percentage %remaining"
        status_chr = ""
        status_bat = ""
}

disk "/" {
        format = "  %avail"
}

disk "/home" {
	format = "  %avail"
}

cpu_usage {
        format = "  %usage"
}

memory {
        format = "  %used / %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

volume master {
    format = "  %volume"
    format_muted = "  %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}


tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
